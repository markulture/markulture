---
import '../styles/global.css';

interface Props {
	title?: string;
	description?: string;
}

const { 
	title = 'Markulture Inc.', 
	description = 'Markulture' 
} = Astro.props;
---

<!doctype html>
<html lang="vi">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<meta name="description" content={description} />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body id="top" class="min-h-screen bg-gray-50">
		<slot />
	</body>
</html>
